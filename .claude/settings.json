{
  "permissions": {
    "allow": [
      "Bash(npm run dev)",
      "Bash(npm run build)",
      "Bash(npm run build:*)",
      "Bash(npm run start)",
      "Bash(npm run lint)",
      "Bash(npm run lint:fix)",
      "Bash(npm run check)",
      "Bash(npm run test)",
      "Bash(npm run test:*)",
      "Bash(npm run graphql-codegen)",
      "Bash(npm run analyze)",
      "Bash(npx tsc --noEmit)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git diff:*)",
      "Bash(git log)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ls)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(whoami)",
      "Bash(node --version)",
      "Bash(npm --version)",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "LS",
      "TodoWrite",
      "Task",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(git push:*)",
      "Bash(git reset --hard:*)",
      "Bash(git rebase:*)",
      "Bash(npm install:*)",
      "Bash(npm uninstall:*)",
      "Bash(yarn:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "edit_file",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint:fix {file_path} || true",
            "description": "Auto-fix ESLint and Prettier issues"
          },
          {
            "type": "command",
            "command": "npm run check || echo 'TypeScript check completed with warnings'",
            "description": "Run TypeScript type checking"
          }
        ]
      }
    ]
  }
}
