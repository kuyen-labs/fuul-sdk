{
  "name": "@fuul/sdk",
  "type": "module",
  "version": "3.4.1",
  "description": "Fuul SDK",
  "keywords": [
    "Fuul",
    "Fuul Protocol",
    "Fuul SDK"
  ],
  "author": "Fuul Team",
  "scripts": {
    "build": "npm run tailwind:prod && npx twlit && tsc && vite build",
    "dev": "concurrently \"npm run tailwind:dev\" \"npm run twlit\" \"vite\"",
    "format": "prettier --write 'src/**/*.{js,json,ts}' --config ./.prettierrc",
    "lint:fix": "eslint --fix 'src/**/*.{js,json,ts}'",
    "lint": "eslint 'src/**/*.{js,json,ts}'",
    "semantic-release": "semantic-release",
    "tailwind:dev": "npx tailwindcss -o ./src/components/styles/main.css --watch",
    "tailwind:prod": "npx tailwindcss -o ./src/components/styles/main.css --minify",
    "test:ci": "jest --ci --passWithNoTests",
    "test": "jest --coverage",
    "twlit": "twlit --input ./src/components/styles/main.css --output ./src/components/styles/main.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.2.2",
    "lit": "^3.1.1",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.4.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.2",
    "jest-localstorage-mock": "^2.4.26",
    "prettier": "^2.8.7",
    "semantic-release": "^22.0.12",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "twlit": "^0.0.1-alpha.37",
    "typescript": "^4.7.4",
    "vite": "^4.2.1",
    "vite-plugin-dts": "^3.7.2",
    "vite-plugin-linter": "^2.0.2",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fuul-protocol/fuul-sdk.git"
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  }
}
