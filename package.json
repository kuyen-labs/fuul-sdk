{
  "name": "@fuul/sdk",
  "version": "1.1.1",
  "description": "Fuul SDK",
  "keywords": [
    "Fuul",
    "Fuul Protocol",
    "Fuul SDK"
  ],
  "author": "Fuul Team",
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint 'src/**/*.{js,json,ts}'",
    "lint:fix": "eslint --fix 'src/**/*.{js,json,ts}'",
    "format": "prettier --write 'src/**/*.{js,json,ts}' --config ./.prettierrc",
    "semantic-release": "semantic-release",
    "test": "jest --coverage --watchAll",
    "test:ci": "jest --ci --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/fuul-sdk.mjs",
      "require": "./dist/fuul-sdk.umd.js"
    }
  },
  "main": "./dist/fuul-sdk.umd.js",
  "module": "./dist/fuul-sdk.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.2.2",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.2",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.2",
    "jest-localstorage-mock": "^2.4.26",
    "prettier": "^2.8.7",
    "semantic-release": "^20.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite": "^4.2.1",
    "vite-plugin-dts": "^2.2.0",
    "vite-plugin-linter": "^2.0.2",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fuul-app/fuul-sdk.git"
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  }
}
